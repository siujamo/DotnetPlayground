    <!-- 控制台日志 -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{dd MMM yyyy HH:mm:ss.fff} %5level %-40logger: %message%newline" />
        </layout>
    </appender>
</log4net>